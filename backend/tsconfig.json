{
  "compilerOptions": {
    // File layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment / module settings
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "esnext",

    // For nodejs:
    // "lib": ["esnext"],

    // Other outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter typechecking
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Recommended / ergonomics
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,

    "typeRoots": ["./types/"]
  },
  "exclude": ["node_modules", "dist", "eslint.config.ts"]
}
